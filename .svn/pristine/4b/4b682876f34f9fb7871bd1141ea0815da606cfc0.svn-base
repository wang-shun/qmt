<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <property resource="application.properties" />
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} [%-5level] [%thread] %c - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="file" class="com.lesports.qmt.log.cat.CatRollingFileAppender" additivity="false">
        <File>${log.path}</File>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} [%-5level] [%thread] %c - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}.%d.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="tracer_file" class="ch.qos.logback.core.rolling.RollingFileAppender" additivity="false">
        <File>${log.dir}/tracer.log</File>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} [%-5level] [%thread] %c - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.dir}/tracerlog.%d.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 异步输出 -->
    <appender name="async" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>40</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>512</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="file"/>
    </appender>

    <!--业务日志单独输出 begin-->
    <appender name="stash" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>${logstash.destination1}</destination>
        <destination>${logstash.destination2}</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <shortenedLoggerNameLength>0</shortenedLoggerNameLength>
        </encoder>
    </appender>
    <logger name="monitor" level="info">
        <appender-ref ref="stash"/>
    </logger>
    <!--业务日志单独输出 end-->

    <logger name="com.lesports" level="INFO"/>
    <logger name="com.mongodb" level="INFO"/>
    <logger name="org.springframework.data" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="async"/>
        <!--<appender-ref ref="console"/>-->
    </root>

</configuration>
