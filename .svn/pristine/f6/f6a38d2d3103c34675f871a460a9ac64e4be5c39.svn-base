<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <property name="log.dir" value="/letv/logs/lesports-tlive-rpc-api-server"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} [%-5level] [%thread] %c - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender" additivity="false">
        <File>${log.path}</File>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} [%-5level] [%thread] %c - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}.%d.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="tracer_file" class="ch.qos.logback.core.rolling.RollingFileAppender" additivity="false">
        <File>${log.dir}/tracer.log</File>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} [%-5level] [%thread] %c - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.dir}/tracerlog.%d.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 异步输出 -->
    <appender name="tracer_async" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>512</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="tracer_file"/>
    </appender>

    <!-- 异步输出 -->
    <appender name="async" class="ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>512</queueSize>
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref="file"/>
    </appender>

    <logger name="me.ellios.hedwig.rpc.tracer" level="INFO" additivity="false">
        <appender-ref ref="tracer_async"/>
    </logger>

    <logger name="com.lesports" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="async"/>
    </root>

</configuration>
