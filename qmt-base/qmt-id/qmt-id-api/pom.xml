<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>com.lesports</groupId>
        <artifactId>lesports-parent</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.lesports.qmt</groupId>
    <artifactId>qmt-id-api</artifactId>
    <packaging>jar</packaging>

    <profiles>
        <profile>
            <properties>
                <thrift.executable>/usr/local/thrift/bin/thrift</thrift.executable>
                <thrift.outputDirectory>target/generated-sources</thrift.outputDirectory>
            </properties>
            <id>pbt</id>
            <activation>
                <file>
                    <exists>${thrift.executable}</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.7</version>
                        <executions>
                            <execution>
                                <id>setup</id>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <tasks>
                                        <mkdir dir="${thrift.outputDirectory}"/>
                                        <delete includeemptydirs="true">
                                            <fileset dir="src/main/java" includes="**/*"/>
                                        </delete>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>generate-id-service</id>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <tasks>
                                        <exec executable="${thrift.executable}">
                                            <arg value="-v"/>
                                            <arg value="--gen"/>
                                            <arg value="java:beans"/>
                                            <arg value="-I"/>
                                            <arg value="src/main/thrift"/>
                                            <arg value="-o"/>
                                            <arg value="${thrift.outputDirectory}"/>
                                            <arg value="src/main/thrift/id_service.thrift"/>
                                        </exec>

                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>generate-TId</id>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <tasks>
                                        <exec executable="${thrift.executable}">
                                            <arg value="-v"/>
                                            <arg value="--gen"/>
                                            <arg value="java:beans"/>
                                            <arg value="-I"/>
                                            <arg value="src/main/thrift"/>
                                            <arg value="-o"/>
                                            <arg value="${thrift.outputDirectory}"/>
                                            <arg value="src/main/thrift/TId.thrift"/>
                                        </exec>

                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>clean</id>
                                <phase>generate-sources</phase>
                                <configuration>
                                    <tasks>
                                        <copy todir="src/main/java">
                                            <fileset dir="${thrift.outputDirectory}/gen-javabean" includes="**/*"/>
                                        </copy>
                                        <delete dir="${thrift.outputDirectory}/gen-javabean"/>
                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>org.apache.thrift</groupId>
            <artifactId>libthrift</artifactId>
        </dependency>
    </dependencies>
</project>